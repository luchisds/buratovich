@media screen and (max-width: 1125px)
	.logo
		width 37% !important
	nav
		font-size .9em
		width 63% !important
		.home-btn
			span
				&.home-text
					display none
				&.home-icon
					display block !important

@media screen and (max-width: 1024px)
	.logo
		width 80% !important
	nav
		width 20% !important
		&.burger
			display inline-block !important
			li
				i
					font-size 1.5em
		&.main
			display none
			padding 0
			width 100% !important
			li
				display block
				margin 0
				a
					border-bottom 1px dotted $midGrey
					border-radius 0
					i.fa-caret-down
						display none
				&:first-child
					a
						border-top 1px dotted $midGrey
				.home-btn
					span
						&.home-text
							display block
						&.home-icon
							display none !important