		padding 3em 2.5em

@media screen and (max-width: 720px)
	#home
		.business-units
			.carousel
				.flickity-page-dots
					display block
			.units
				display none
			.unit-names
				display block
		.utils
			div > article
				&.currencies, &.rain-weather
					stack()
					padding 0 !important
					.utils-title, .container
						margin 0 auto
				&.currencies
					margin-bottom 2em
	#company
		.imgs
			img
				width 45%
				&:last-child
					display none
		.history-info
			.second-col
				.infography
					margin-top 0
		.gallery
			margin-bottom 3em
		.video-company
			div
				padding 2em 0
				p
					font-size 1em
					padding 0 1em
	#company .gallery,
	#gallery
		figure
			width 50%
	#contact
		.maps
			padding 0 .5em
		.areas
			padding 0 1em
			.contact-buttons, .contact-columns
				display inline-block
				vertical-align top
			.contact-columns
				padding-left 2em
				width 50%
			.column
				stack()
				& > div:not(#contact-acopio)
					display none
				& > .unit
					h3
						margin-top 0
	#bussines-units
		.units-description
			font-size 1.2em
		.unit
			margin-top 6em
			&.acopio
				.main
					.map-container
						display none
					.location
						.row
							&:first-child
								.plants
									background url('../img/units/acopio/cha.png') no-repeat 15px 50%
							&:last-child
								.plants
									background url('../img/units/acopio/bas.png') no-repeat 15px 50%
							.plants
								padding-right 1em
			&.acopio, &.export
				.related
					font-size .9em
					article
						div
							padding 1.5em 1.5em 0 1.5em
			&.commer
				.main
					.box
						width 11em
			&.agro
				.main
					.boxes
						div
							stack()
							&:not(:last-child)
								margin-bottom 1em
							.box
								width 90%
			&.export
				.related
					padding 0 1em
					article
						stack()
						&:not(:last-child)
							margin-bottom 1.5em
						img, div
							display inline-block
							vertical-align middle
						div
							border-left 1px solid $midGrey
							margin-left 5%
							padding 0 0 0 .5em
							text-align left
							width 64%
						img
							width 30%
			.unit-title
				font-size 2.5em
			.quote
				font-size 1.1em
	#error-page
		.data
			stack()
		.img
			display none

@media screen and (min-width: 720px)
