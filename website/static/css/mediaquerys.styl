@media screen and (max-width: 1125px)
	header
		.logo
			width 37% !important
		nav
			font-size .9em
			width 63% !important
			.home-btn
				span
					&.home-text
						display none
					&.home-icon
						display block !important
	footer
		.nav
			nav
				display none
			.cv
				margin 0
				div
					right 0
		.footer-rd-nav
			display block
			nav
				text-align center
				margin-bottom 2.5em
		.logo, .contact, .nav
			column(1/3, gutter:0)
		.contact
			border-left 1px dotted $midGrey
			border-right 1px dotted $midGrey
			text-align center
	#home
		.utils
			div > article
				&.pizarras
					stack()
					margin-bottom 2em
					padding 0 !important
				&.currencies, &.rain-weather
					column(1/2, gutter:0)
				&.currencies
					padding-left 0 !important
					.utils-title, .container
						margin-right 0
				&.rain-weather
					.utils-title, .container
						margin-left 0
	#company
		.history-info
			& > .first-col, & > .second-col
				stack()
				padding 0

@media screen and (max-width: 1080px)
	#company
		.imgs
			img:first-child
				display none
	#contact
		.offices
			.offices-bas, .offices-cha
				& > div
					width 100%
					&:first-child
						margin-bottom 1em
				img, .office-info
					display inline-block
					vertical-align top
				img
					width 45%

@media screen and (min-width: 1025px)
	header
		nav.main
			display block !important

@media screen and (max-width: 1024px)
	header
		.logo
			width 88% !important
		nav
			width 12% !important
			&.burger
				display inline-block !important
				li
					i
						font-size 1.5em
			&.main
				display none
				padding 0
				width 100% !important
				li
					display block
					margin 0
					a
						border-bottom 1px dotted $midGrey
						border-radius 0
						i.fa-caret-down
							display none
					&:first-child
						a
							border-top 1px dotted $midGrey
					.home-btn
						span
							&.home-text
								display block
							&.home-icon
								display none !important
					.logout
						i
							margin-right .3em
						.logout-text
							display inline
	#bussines-units
		.unit
			&.export
				.main
					.description, .commodities
						stack()
					.description, .commodities
						height auto
						.box
							font-size 1.1em
							width auto
							h3
								margin-bottom .5em
					.commodities
						padding-top 2em
						top 0
						transform translateY(0%)
						.product
							margin-bottom 1em
							padding 0 1.5em
							img, p
								display inline-block
								vertical-align middle
							img
								position relative
								width 30%
								z-index 2
							p
								margin 0
								margin-left -.4em
								position relative
								width 70%
								z-index 1

@media screen and (max-width: 930px)
	#home
		.business-units
			.carousel
				.carousel-cell
					div
						p
							font-size 1.2em
	#company .gallery, 
	#gallery
		figure
			width 33.33%
	#contact
		.offices
			padding 0 .5em
			.offices-bas, .offices-cha
				width 49%
				img, .office-info
					display block
					margin 0 auto
					text-align center
					width 100%
			.offices-bas
				margin-right 2%

@media screen and (max-width: 930px) and (min-width: 630px)
	#home
		.services
			article
				padding 1em 0
				width 100%
				img, .service-info
					display inline-block
					vertical-align top
				img
					width 40%
				.service-info
					padding-left 1em
					width 60%
					h3, p
						text-align left
					h3
						margin-top 0

@media screen and (max-width: 900px)
	footer
		.nav
			stack()
		.logo, .contact
			column(1/2, gutter:0)
			margin-bottom 1.5em
		.contact
			border-right none
			text-align right
