@media screen and (max-width: 800px)
	#home
		.business-units
			font-size .8em
		.quote
			font-size 1.4em
	#company
		.imgs
			img
				width 30%
	#bussines-units
		.unit
			&.acopio
				.main
					.map
						width 370px
					.location
						.plants
							padding-right 2em
