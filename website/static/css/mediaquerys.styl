@media screen and (max-width: 1125px)
	header
		.logo
			width 37% !important
		nav
			font-size .9em
			width 63% !important
			.home-btn
				span
					&.home-text
						display none
					&.home-icon
						display block !important
	footer
		.nav
			nav
				display none
			.cv
				margin 0
				div
					right 0
		.footer-rd-nav
			display block
			nav
				text-align center
				margin-bottom 2.5em
		.logo, .contact, .nav
			column(1/3, gutter:0)
		.contact
			border-left 1px dotted $midGrey
			border-right 1px dotted $midGrey
			text-align center
	#home
		.utils
			div > article
				&.pizarras
					stack()
					margin-bottom 2em
					padding 0 !important
				&.currencies, &.rain-weather
					column(1/2, gutter:0)
				&.currencies
					padding-left 0 !important
					.utils-title, .container
						margin-right 0
				&.rain-weather
					.utils-title, .container
						margin-left 0
	#company
		.history-info
			& > .first-col, & > .second-col
				stack()
				padding 0

@media screen and (max-width: 1080px)
	#company
		.imgs
			img:first-child
				display none
	#contact
		.offices
			.offices-bas, .offices-cha
				& > div
					width 100%
					&:first-child
						margin-bottom 1em
				img, .office-info
					display inline-block
					vertical-align top
				img
					width 45%

@media screen and (min-width: 1025px)
	header
		nav.main
			display block !important

@media screen and (max-width: 1024px)
	header
		.logo
			width 88% !important
		nav
			width 12% !important
			&.burger
				display inline-block !important
				li
					i
						font-size 1.5em
			&.main
				display none
				padding 0
				width 100% !important
				li
					display block
					margin 0
					a
						border-bottom 1px dotted $midGrey
						border-radius 0
						i.fa-caret-down
							display none
					&:first-child
						a
							border-top 1px dotted $midGrey
					.home-btn
						span
							&.home-text
								display block
							&.home-icon
								display none !important
					.logout
						i
							margin-right .3em
						.logout-text
							display inline

@media screen and (max-width: 930px)
	#home
		.business-units
			.carousel
				.carousel-cell
					div
						p
							font-size 1.2em
	#company .gallery, 
	#gallery
		figure
			width 33.33%
	#contact
		.offices
			padding 0 .5em
			.offices-bas, .offices-cha
				width 49%
				img, .office-info
					display block
					margin 0 auto
					text-align center
					width 100%
			.offices-bas
				margin-right 2%

@media screen and (max-width: 930px) and (min-width: 630px)
	#home
		.services
			article
				padding 1em 0
				width 100%
				img, .service-info
					display inline-block
					vertical-align top
				img
					width 40%
				.service-info
					padding-left 1em
					width 60%
					h3, p
						text-align left
					h3
						margin-top 0

@media screen and (max-width: 900px)
	footer
		.nav
			stack()
		.logo, .contact
			column(1/2, gutter:0)
			margin-bottom 1.5em
		.contact
			border-right none
			text-align right
	#contact
		.areas
			font-size .9em

@media screen and (max-width: 800px)
	#home
		.business-units
			font-size .8em
		.quote
			font-size 1.4em
	#company
		.imgs
			img
				width 30%
	#bussines-units
		.unit
			&.acopio
				.main
					.map
						width 370px
					.location
						.plants
							padding-right 2em
			.unit-title
				font-size 1.9em

@media screen and (max-width: 720px)
	#home
		.business-units
			.carousel
				.flickity-page-dots
					display block
			.units
				display none
			.unit-names
				display block
		.utils
			div > article
				&.currencies, &.rain-weather
					stack()
					padding 0 !important
					.utils-title, .container
						margin 0 auto
				&.currencies
					margin-bottom 2em
	#company
		.imgs
			img
				width 45%
				&:last-child
					display none
		.history-info
			.second-col
				.infography
					margin-top 0
		.gallery
			margin-bottom 3em
		.video-company
			div
				padding 2em 0
				p
					font-size 1em
					padding 0 1em
	#company .gallery,
	#gallery
		figure
			width 50%
	#contact
		.maps
			padding 0 .5em
		.areas
			padding 0 1em
			.contact-buttons, .contact-columns
				display inline-block
				vertical-align top
			.contact-columns
				padding-left 2em
				width 50%
			.column
				stack()
				& > div:not(#contact-acopio)
					display none
				& > .unit
					h3
						margin-top 0
	#bussines-units
		.units-description
			font-size 1.2em
		.unit
			margin-top 6em
			&.acopio
				.main
					.map-container
						display none
					.location
						.row
							&:first-child
								.plants
									background url('../img/units/acopio/cha.png') no-repeat 15px 50%
							&:last-child
								.plants
									background url('../img/units/acopio/bas.png') no-repeat 15px 50%
							.plants
								padding-right 1em
			.unit-title
				font-size 2.5em
			.quote
				font-size 1.1em

@media screen and (min-width: 720px)
	#contact
		.areas
			.contact-columns
				.column
					.unit
						display block !important

@media screen and (max-width: 630px)
	footer
		.maxwidth
			padding 2em 1em 1em 1em;
			.logo, .contact
				stack()
				text-align center
			.contact
				border none
			.nav
				.cv
					div
						right 0
						left 0
						margin 0 auto
		.foot
			p
				margin 0
				padding 0
				text-align center
	.path
		font-size .9em
	#home
		.business-units
			.carousel
				.carousel-cell
					div
						p
							font-size 1em
		.quote
			font-size 1.2em
		.services
			article
				margin-top 1.5em
				width 100%
		.misc
			padding 1.7em
			& > div
				stack()
				margin 0 auto
				text-align center
				&:first-child
					margin-bottom 1.3em
			.cponline
				border 0
			.cponline, .tax
				font-size .9em
				margin 0 auto
				min-height 0
				div
					left 0
					margin 0 auto
					position relative
					right 0
	#company
		.first-col
			.featured, .history
				li, p
					font-size .9em
	#contact
		.data-contact
			text-align center
		.offices
			.offices-bas, .offices-cha
				& > div
					padding-bottom .5em
					.office-info
						.map-link
							display block
		.maps
			display none
	#bussines-units
		.units-description
			font-size 1em
			padding 0 1em
		.unit
			.unit-title
				font-size 2.2em
			.quote
				font-size 1em

@media screen and (max-width: 525px)
	footer
		.footer-rd-nav
			nav
				ul
					li
						padding .5em 0
						width 50%
	.path
		font-size .8em
		.path-container
			.hi
				text-align left
	#contact
		.areas
			.contact-buttons, .contact-columns
				display block
			.contact-buttons
				li
					margin 0 auto .5em auto
					a +	i
						display none !important
			.contact-columns
				margin 2em auto 0 auto
				padding 0
				width 60%
	#bussines-units
		.unit
			margin-top 5em

@media screen and (max-width: 460px)
	header
		.logo
			h1
				font-size 1.9em !important
			img
				width 45px
	footer
		.footer-rd-nav
			nav
				ul
					li
						width 100%
		.foot
			padding 1em 1.5em
			p
				span
					display block
	.path
		font-size .7em
		padding 0 .5em
	#home
		.business-units
			.carousel
				.flickity-prev-next-button
					display none
					// height 25px
					// width 25px
		.quote
			font-size 1.1em
		.utils
			font-size .9em
			td
				padding 7px 10px
	#company
		.imgs
			display none
	#company .gallery,
	#gallery
		text-align center
		figure
			width 100%
	#contact
		.data-contact
			font-size 1.1em
			padding 2em 1em 0 1em
		.offices
			.offices-bas, .offices-cha
				margin 0
				width 100%
				& > div
					margin-bottom 2em
					&:first-child
						margin-bottom 2em
	#bussines-units
		.unit
			margin-top 4em
			.unit-title
				font-size 1.9em

@media screen and (max-width: 380px)
	#home
		.utils
			font-size .8em
			td
				padding 6px 6px
	#company
		.history-info
			& > .second-col
				display none
		.gallery
			margin-top .5em
			h2
				margin-top .5em
	#contact
		.data-contact
			font-size 1em
			padding 2em .5em 0 .5em

@media screen and (max-width: 360px)
	header
		.logo, .burger
			width 100% !important
		.burger
			padding 0
			ul
				text-align center
	#home
		.business-units
			.carousel
				.carousel-cell
					div
						p
							font-size .9em