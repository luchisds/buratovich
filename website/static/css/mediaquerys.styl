@media screen and (max-width: 1125px)
	.logo
		width 37% !important
	nav
		font-size .9em
		width 63% !important
		.home-btn
			span
				&.home-text
					display none
				&.home-icon
					display block !important

@media screen and (max-width: 1024px)
	.logo
		width 80% !important
	nav
		width 20% !important
		ul
			&.burger
				display inline-block !important
				li
					font-size 1.2em
			&:not(.burger)
				display none