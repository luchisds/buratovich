/*#### BASE ################################################################*/

header
	overflow hidden
	padding 1em 0
	& > div
		overflow hidden
	.logo
		padding 0 1em
		img, h1
			display inline-block
			position relative
			vertical-align middle
		h1
			color #333
			font-size 2.3em
			line-height 1em
			margin-left .5em
			text-shadow 2px 2px 0px #ddd
		img
			width 55px
		span
			display block
	nav
		padding-right 1em
		ul
			padding .8em 0
			//text-align center
			text-align right
			li
				margin 0 1%
				text-align center
				&:last-child
					margin-right 0
				&:hover
					a:not(.login-btn)
						color $lightGrey
						background-color $baseColor
						i
							bottom -10px !important
							opacity 1 !important
					a.login-btn
						background-color $accentColor
				a
					color $darkGreyGreen
					border-radius 4px
					display block
					font-size 1.1em
					padding .5em .7em
					position relative
					transition 0.3s ease-out
					&:not(.login-btn):not(.extranet-btn)
						i
							bottom 0px
							color $baseColor
							left 0
							opacity 0
							position absolute
							right 0
							transition 0.3s ease-out
					&.login-btn, &.extranet-btn
						background-color $baseColor
						color $lightGrey
						i
							margin-right .3em
						&.active
							background-color $accentColor
					&.logout
						i
							margin 0

footer
	border-top 10px solid $accentColor
	& > div
		overflow hidden
		padding 2.5em 2.5em 1em 2.5em
		.logo
			img, .name
				display inline-block
				vertical-align middle
			.name
				font-size 1.5em
				margin-left .5em
			img
				width 40px
		.contact
			i
				margin-right .5em
			p
				margin-bottom .8em
				a
					color $baseColor
					&:hover
						border-bottom 1px dotted $baseColor
		nav
			text-align right
			li
				a
					color $darkGreyGreen
					padding 1em
					&:hover
						color $baseColor
	.foot
		background-color $baseColor
		border-top 1px solid $midGrey
		color $lightGrey
		font-size .8em
		padding 1em 2.5em
		text-align right
		p
			margin-right 1em
			span
				font-weight bold
	.tax
		border-right 1px solid $midGrey
		margin-right .4em !important
	.cv, .tax
		margin-top 1.8em
		max-height 230px
		min-height 60px
		position relative
		div
			background-color $midGrey
			border-radius 3px
			bottom 0
			font-size 1.1em
			// margin-top .8em
			overflow hidden
			position absolute
			right .8em
			text-align right
			top 0
			&:hover
				i
					color $baseColor
			i
				color $accentColor
				font-size 2em
				left 10%
				position absolute
				transition 0.5s ease-out
				top 22%
			span
				display inline-block
				height 200%
				margin-left 35%
				text-align left
				transition 0.3s ease-out
				width 65%
				a
					display block
					color $darkGreyGreen
					height 50%
					padding .5em
					transition 0.5s ease-out
					&.send-cv
						opacity 0
		&:not(.tax)
			span
				&:hover
					transform translateY(-50%)
					.send-cv
						opacity 1
					.work
						opacity 0

.customer
	display none
	padding 0 4em 1em 4em
	.login-extranet
		border-top 1px solid $baseColor
		float right
		padding .7em 2em .7em 1em
		position relative
		transition 0.2s ease-out
		width 470px
		& > i
			color $baseColor
			font-size 1.5em
			position absolute
			right 8px
			top -24px
		fieldset
			padding 0
		.input
			display inline-block
			margin-right .8em
			width 190px
		.submit
			position absolute
			right 10px
			top 14px


/*#### HOME ################################################################*/

#home
	.business-units
		// height 480px
		overflow hidden
		position relative
		.carousel
			.carousel-cell
				clear both
				margin-right 20px
				overflow hidden
				width 100%
				div
					background-color rgba(0,0,0,.4)
					padding 1.2em 1.5em 0 1.5em
					margin-top 1em
					position absolute
					top 0
					width 100%
					p
						color white
						font-size 1.6em
						line-height 1.5em
						opacity 0
						text-shadow 2px 2px 1px $darkGreyGreen
						transition .4s ease-out
						transform translateY(10px)
				img
					display block
					width 100%
				&.move-in
						p
							opacity 1
							transform translateY(-10px)
		.units
			border-bottom 1px solid $midGrey
			//fix 3px top border
			bottom -3px
			height 3em
			position absolute
			width 100%
			z-index 1
			li
				height 3em
				text-align center
				vertical-align bottom
				width 20%
				a
					background-color white
					border-bottom 1px solid $midGrey
					color $darkGreyGreen
					display block
					height 2.5em
					line-height 2.5em
					margin-top .5em
					transition .5s ease-out
					vertical-align bottom
					&:hover
						background-color $midGrey
					&.current
						background-color $baseColor
						border-top 1px solid $midGrey
						color white
						height 3em
						line-height 3em
						margin-top 0

	.services
		background-color $lightGrey
		border-bottom 1px solid $midGrey
		border-top 1px solid $midGrey
		margin 0 auto
		overflow auto
		padding 3.5em 2.5em
		article
			border-radius 5px
			padding 1em
			text-align center
			a
				color $baseColor
				font-size 2em
				transition .3s ease-out
				&:hover
					color $accentColor
					i
						transform rotate(180deg)
				i
					transition .4s ease-out
			h3
				margin .8em 0 .2em 0
				font-size 1.5em
			img
				border-radius 3px
			p
				margin-bottom 1.2em
				padding .2em 0

	.quote
		border-bottom 1px solid $midGrey
		font-size 1.7em
		line-height 1.7em
		padding 2.5em 0 2em 0
		text-align center
		span
			color $baseColor

	.utils
		background url('../img/silos.jpg') no-repeat
		background-attachment fixed
		background-size cover
		overflow hidden
		padding 3em 2.5em
		.container
			background-color white
			border-radius 3px 3px 0 0
		.data
			display block
			font-size .8em
			padding 1.2em .8em 0 .8em
			text-align right
			span
				border-bottom 1px dotted $baseColor
				color $baseColor
		.utils-title
			background-color rgba(255,255,255,.6)
			border-radius 3px 3px 0 0
			margin-bottom .5em
			padding-bottom .3em
			position relative
			text-align center
			.title
				font-size 1.5em
				padding 0 .7em
				vertical-align middle
				span
					display inline-block
					position relative
					vertical-align middle
					&:nth-child(1)
						line-height .8em
					i
						font-size .8em
						margin-right .5em
		.utils-subtitle
			margin-bottom .5em
		.rain-weather
			.utils-title
				background-color rgba(255,255,255,.3)
				padding-bottom 0
				li
					display inline-block
					width 50%
					a
						color #dedede
						display block
						padding-bottom .35em
						transition 0.3s ease-out
						h3
							font-weight 400
						&:not(.active):hover
							color #bbb
						&.active
							background-color rgba(255,255,255,.3)
							color $darkGreyGreen
					&:nth-child(1)
						border-radius 3px 0 0 0
					&:nth-child(2)
						border-radius 0 3px 0 0
			.rain
				.historic-rain
					background-color $midGrey
					padding .7em 0 1em 0
					text-align center
					a
						border-bottom 1px dotted transparent
						color $baseColor
						padding .3em .5em
						i
							color $baseColor
							margin-right .3em
							transition 0.3s ease-out
						&:hover
							border-bottom 1px dotted $midGrey
							i
								transform rotate(-360deg)
			.weather
				display none
				.tab
					background-color #1b1e24
					border-bottom 4px solid #9ea7af
					border-radius 3px 3px 0 0
					text-align center
					li
						width 33.33%
						&:first-child
							a
								border-top-left-radius 3px
						&:last-child
							a
								border-top-right-radius 3px
						&:not(:last-child)
							border-right 1px solid #343a45
						a
							color #d5dde5
							display block
							font-size .8em
							font-weight bold
							padding 15px 0
							text-align center
							text-decoration none
							transition 0.3s
							&:hover, &:focus, &.active
								background-color #4E5066
				.tabcontent
					animation fadeEffect 1s
					display none
					&#arrecifes
						display block
		form
			margin-top .2em
			text-align center
			fieldset
				margin-top .7em
				legend
					display inline-block
				.input
					display inline-block
					font-size .9em
					width 180px
				button
					background-color transparent
					border none
					color $baseColor
					cursor pointer
					display inline-block
					font-size 1.1em
		.data-table
			&.currency-error, &.board-error, &.rain-error
				display none
				td
					color $midGrey
					font-size 1.5em
					padding 1em 0
					text-align center
			&.board-error
				td
					padding 4em 0


