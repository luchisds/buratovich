/*#### BASE ################################################################*/

header
	overflow hidden
	padding 1em 0
	& > div
		overflow hidden
	.logo
		padding 0 1em
		img, h1
			display inline-block
			position relative
			vertical-align middle
		h1
			color #333
			font-size 2em
			line-height 1em
			margin-left .5em
			text-shadow 2px 2px 0px #ddd
		img
			width 55px
		span
			display block
	nav
		ul
			padding .8em 0
			text-align center
			li
				margin 0 1%
				&:hover
					a:not(.login-btn)
						color $lightGrey
						background-color $baseColor
						i
							bottom -10px !important
							opacity 1 !important
					a.login-btn
						background-color $accentColor
				a
					color $darkGreyGreen
					border-radius 4px
					display block
					font-size 1.1em
					padding .5em .7em
					position relative
					transition 0.3s ease-out
					&:not(.login-btn):not(.extranet-btn)
						i
							bottom 0px
							color $baseColor
							left 0
							opacity 0
							position absolute
							right 0
							transition 0.3s ease-out
					&.login-btn, &.extranet-btn
						background-color $baseColor
						color $lightGrey
						i
							margin-right .3em
						&.active
							background-color $accentColor

footer
	border-top 10px solid $accentColor
	& > div
		overflow hidden
		padding 2.5em 2.5em 1em 2.5em
		.logo
			img, .name
				display inline-block
				vertical-align middle
			.name
				font-size 1.5em
				margin-left .5em
			img
				width 40px
		.contact
			i
				margin-right .5em
			p
				margin-bottom .8em
				a
					color $baseColor
					&:hover
						border-bottom 1px dotted $baseColor
		nav
			text-align right
			li
				a
					color $darkGreyGreen
					padding 1em
					&:hover
						color $baseColor
	.foot
		background-color $baseColor
		border-top 1px solid $midGrey
		color $lightGrey
		font-size .8em
		padding 1em 2.5em
		text-align right
		p
			margin-right 1em
			span
				font-weight bold
	.cv
		margin-top 1.2em
		max-height 230px
		min-height 60px
		position relative
		div
			background-color $midGrey
			border-radius 3px
			bottom 0
			font-size 1.1em
			// margin-top .8em
			overflow hidden
			position absolute
			right .8em
			text-align right
			top 0
			&:hover
				i
					color $baseColor
			i
				color $accentColor
				font-size 2em
				left 10%
				position absolute
				transition 0.5s ease-out
				top 22%
			span
				display inline-block
				height 200%
				margin-left 35%
				text-align left
				transition 0.3s ease-out
				width 65%
				a
					display block
					color $darkGreyGreen
					height 50%
					padding .5em
					transition 0.5s ease-out
					&.send-cv
						opacity 0
				&:hover
					transform translateY(-50%)
					.send-cv
						opacity 1
					.work
						opacity 0

.customer
	display none
	padding 0 4em 1em 4em
	.login-extranet
		border-top 1px solid $baseColor
		float right
		padding .7em 2em .7em 1em
		position relative
		transition 0.2s ease-out
		width 470px
		& > i
			color $baseColor
			font-size 1.5em
			position absolute
			right 8px
			top -24px
		fieldset
			padding 0
		.input
			display inline-block
			margin-right .8em
			width 190px
		.submit
			position absolute
			right 10px
			top 14px


/*#### HOME ################################################################*/

#home
	.business-units
		height 480px
		overflow hidden
		position relative
		.carousel
			.carousel-cell
				clear both
				width 100%
				div
					background-color rgba(0,0,0,.4)
					padding 1.2em 1.5em 0 1.5em
					margin-top 1em
					position absolute
					top 0
					width 100%
					p
						color white
						font-size 1.6em
						line-height 1.5em
						opacity 0
						text-shadow 2px 2px 1px $darkGreyGreen
						transition .5s ease-out
						transform translateY(10px)
						// .highlight
						// 	border-bottom 4px solid $baseColor
				img
					width 100%
				&.move-in
						p
							opacity 1
							transform translateY(-10px)
		.units
			border-bottom 1px solid $midGrey
			//fix 3px top border
			bottom -3px
			height 3em
			position absolute
			width 100%
			z-index 1
			li
				height 3em
				text-align center
				vertical-align bottom
				width 20%
				a
					background-color white
					border-bottom 1px solid $midGrey
					color $darkGreyGreen
					display block
					height 2.5em
					line-height 2.5em
					margin-top .5em
					transition .5s ease-out
					vertical-align bottom
					&:hover
						background-color $midGrey
					&.current
						background-color $baseColor
						border-top 1px solid $midGrey
						color white
						height 3em
						line-height 3em
						margin-top 0

	.services
		background-color $lightGrey
		border-bottom 1px solid $midGrey
		border-top 1px solid $midGrey
		margin 0 auto
		overflow auto
		padding 3.5em 2.5em
		article
			// border-left 1px solid $midGrey
			// border-right 1px solid $midGrey
			border-radius 5px
			padding 1em
			text-align center
			a
				color $baseColor
				font-size 2em
				transition .3s ease-out
				&:hover
					color $accentColor
					i
						transform rotate(180deg)
				i
					transition .4s ease-out
			h3
				margin .8em 0 .2em 0
				font-size 1.5em
			img
				border-radius 3px
			p
				margin-bottom 1.2em
				padding .2em 0

	.quote
		border-bottom 1px solid $midGrey
		font-size 1.7em
		line-height 1.7em
		padding 2.5em 0 2em 0
		text-align center
		span
			color $baseColor

	.utils
		background url('../img/silos.jpg') no-repeat
		background-attachment fixed
		background-size cover
		overflow hidden
		padding 3em 2.5em
		.container
			background-color white
			border-radius 3px 3px 0 0
		.data
			display block
			font-size .8em
			padding 1.2em .8em 0 .8em
			text-align right
			span
				border-bottom 1px dotted $baseColor
				color $baseColor
		.utils-title
			background-color rgba(255,255,255,.6)
			border-radius 3px 3px 0 0
			margin-bottom .5em
			padding-bottom .3em
			position relative
			text-align center
			.title
				font-size 1.5em
				padding 0 .7em
				vertical-align middle
				// &:before
				// 	border-top 4px solid $baseColor
				// 	bottom 0
				// 	content ""
				// 	left 0
				// 	margin 0 auto
				// 	position absolute
				// 	right 0
				// 	top 55%
				// 	width 100%
				// 	z-index -1
				span
					display inline-block
					position relative
					vertical-align middle
					&:nth-child(1)
						line-height .8em
					i
						font-size .8em
						margin-right .5em
		.utils-subtitle
			margin-bottom .5em
		.weather
			.tab
				background-color #1b1e24
				border-bottom 4px solid #9ea7af
				border-radius 3px 3px 0 0
				text-align center
				li
					width 33.33%
					&:first-child
						a
							border-top-left-radius 3px
					&:last-child
						a
							border-top-right-radius 3px
					&:not(:last-child)
						border-right 1px solid #343a45
					a
						color #d5dde5
						display block
						font-size .8em
						font-weight bold
						padding 15px 0
						text-align center
						text-decoration none
						transition 0.3s
						&:hover, &:focus, &.active
							background-color #4E5066
			.tabcontent
				animation fadeEffect 1s
				display none
				&#arrecifes
					display block
		form
			margin-top .2em
			text-align center
			fieldset
				margin-top .7em
				legend
					display inline-block
				.input
					display inline-block
					font-size .9em
					width 180px
				button
					background-color transparent
					border none
					color $baseColor
					cursor pointer
					display inline-block
					font-size 1.1em
		table
			animation float 5s infinite
			background white
			border-collapse collapse
			border-radius 3px
			border-spacing 0
			box-shadow 0 5px 10px rgba(0, 0, 0, 0.1)
			font-size .9em
			padding 5px
			width 100%
			td
				background #FFFFFF
				border-right 1px solid #C1C3D1
				padding 7px 12px
				text-align left
				text-shadow -1px -1px 1px rgba(0, 0, 0, 0.1)
				vertical-align middle
				&:last-child
					border-right 0px
			th
				background #1b1e24
				border-bottom 4px solid #9ea7af
				border-right 1px solid #343a45
				color #D5DDE5
				padding 15px
				text-align center
				text-shadow 0 1px 1px rgba(0, 0, 0, 0.1)
				vertical-align middle
				&:first-child
					border-top-left-radius 3px
				&:last-child
					border-right none
					border-top-right-radius 3px
			tr
				border-bottom 1px solid #C1C3D1
				border-top 1px solid #C1C3D1
				color #666B85
				font-size .9em
				text-shadow 0 1px 1px rgba(256, 256, 256, 0.1)
				&:hover td
					background #4E5066
					border-bottom 1px solid #22262e
					border-top 1px solid #22262e
					color #FFFFFF
				&:first-child
					border-top none
				&:last-child
					border-bottom none
					td
						border-bottom none
						&:first-child
							border-bottom-left-radius 3px
						&:last-child
							border-bottom-right-radius 3px
				&:nth-child(odd)
					td
						background #EBEBEB
					&:hover
						td
							background #4E5066


/*#### COMPANY ################################################################*/

#company
	overflow hidden
	position relative
	.featured
		padding 0 2em
		font-size 1.1em
		h2
			text-shadow 1px 1px 2px $midGrey
			text-align center
			font-size 1.6em
			margin 2em 0 .8em 0
		ul
			// margin-left 1em
			li
				font-weight 300
				line-height 1.4em
				margin-bottom .8em
				padding-left: 1.3em;
				&:before
					color $baseColor
					content "\f14a" /* FontAwesome Unicode */
					font-family FontAwesome
					font-size .9em
					display inline-block
					margin-left -1.3em /* same as padding-left set on li */
					width 1.3em /* same as padding-left set on li */

	.imgs
		text-align center
		img
			border-radius 3px
			margin 1.5em .5em 0 .5em

	.history
		padding 2em
		h2
			text-shadow 1px 1px 2px $midGrey
			font-size 1.7em
			text-align center
			margin .5em 0 .8em 0
		p
			font-weight 300
			line-height 1.3em
			margin-bottom .8em


	.video-company
		margin-top 3em
		text-align center
		p
			padding 0 2em
			color $baseColor
			font-size 1.2em
			text-align left
			margin-bottom 2em
		div
			border-top 1px solid $midGrey
			background-color $lightGrey
			padding 3em 0
			video
				background-color white
	
	.second-col
		padding-right 2em
	.infography
		//border-left 1px solid $midGrey
		background-color #efefef
		border-radius 3px
		font-size .8em
		line-height 1.6em
		margin-top 3.5em
		overflow hidden
		padding 3em 0
		position relative
		.row
			overflow hidden
			.first-col, .second-col
				position relative
			.first-col:not(.empty), .second-col:not(.empty)
				padding 2em
				span
					background-color white
					border-radius 3px
					display block
					border 1px solid $midGrey
					padding 1em
					transition 0.3s ease-out
					&:hover
						border 1px solid $accentColor
						& + i
							color $accentColor
					& + i
						background-color #efefef
						color $baseColor
						font-size 1.8em
						padding .2em 0
						position absolute
						transition 0.3s ease-out
			.first-col:not(.empty)
				border-right 2px solid $baseColor
				margin-left 2px
				i
					right -11px
					bottom 5px
			.second-col:not(.empty)
				border-left 2px solid $baseColor
				i
					left -11px
					bottom 5px
			.empty
				height 100%



/*#### CONTACT ################################################################*/

#contact
	.offices, .data-contact, .areas
		font-weight 300
		padding 0 2em
	.data-contact
		margin 1.5em 0 0 0
		font-size 1.2em
		a
			color $baseColor
			border 1px solid white
			border-radius 3px
			font-weight 400
			margin-left .5em
			padding .2em .3em
			&:hover
				border 1px solid $baseColor
	.offices
		margin 1em 0
		overflow hidden
		div
			img
				border-radius 3px
				width 100%
			h3
				color $baseColor
				padding .5em
			p
				line-height 1.5em
				padding 0 .5em
	.areas
		margin 2.5em 0
		overflow hidden
		.column
			.unit
				h3
					color $baseColor
					margin 1.5em 0 .5em 0
					text-transform uppercase
					& + h4
						margin-top 0
				h4
					color $accentColor
					margin 1.5em 0 .8em 0
					& + h5
						margin-top 1em
				h5
					padding-left .5em
					margin 1.5em 0 .5em 0
					text-transform uppercase
					i
						color $accentOrange
						font-size 1.3em
						padding-right .3em
				div
					margin-top .5em
					p:nth-child(1)
						font-weight 400
					p:nth-child(2)
						margin 0 0 .5em .5em
					a
						color $baseColor
						&:hover
							border-bottom 1px dotted $baseColor
			& .unit:first-child
					h3
						margin-top 0
	.offices, .areas
		h2
			margin 1em 0 1.5em 0
			text-align center


/*#### LOGIN ################################################################*/

#login
	.state
		margin 2em 0
		padding 0 2em
		text-align center
		p
			font-size 2em
		span
			display block
			font-size 1.1em
			margin-top 2em
			a
				border 1px solid transparent
				border-radius 3px
				color $baseColor
				padding .1em .3em
				&:hover
					border 1px solid $baseColor
	.login-extranet, .input, .submit
		margin 0 auto
	.login-extranet
		background-color $midGrey
		border-radius 3px
		margin-bottom 3em
		max-width 500px
		padding 1em 0
		text-align center
		.input
			margin-top .8em
			width 300px
		.submit
			font-size 1.2em
			margin-top 1em
			padding .3em 1em
			i
				font-size 1.2em
				margin-left .3em


/*#### EXTRANET ################################################################*/

#extranet
	padding 2em 1.5em 8em 1.5em
	.notification
		position relative
		&:not(:nth-child(1))
			margin-top 2em
		.notification-content
			padding-top .8em
			&:after
				content "\f05a"
				font-family FontAwesome
				font-style normal
				font-weight normal
				text-decoration inherit
				position absolute
				font-size 1.5em
				color $midGrey
				opacity .5
				top 50%
				z-index 1
			.title, .text
				padding-left 2em
			.title
				font-weight bold
				margin-bottom .5em
				text-transform uppercase
		.date
			color $baseColor
			font-weight bold
	.viewed
		margin-top 2em
		text-align center
		a
			// background-color $baseColor
			border 1px solid $baseColor
			border-radius 3px
			// color white
			color $darkGreyGreen
			padding .3em .5em
			&:hover
				background-color $baseColor
				color white
	.row
		margin-top 2em
	ul
		text-align center
		li
			background-color $baseColor
			border-radius 3px
			height 100px
			text-align center
			transition 0.3s ease-out
			width 180px
			&:hover
				background-color $accentColor
			&:not(:nth-child(1))
				margin-left 2em
			a
				color white
				display block
				height 100%
				padding 10px
				width 100%
				div
					position relative
					top 50%
					transform translateY(-50%)
					span
						// top 50%
						// transform translateY(-25%)
						display block
						&:nth-child(1)
							font-size 1.2em
						&:nth-child(2)
							font-size 2em
							margin-top .2em


/*#### CTA CTE $ / KG ################################################################*/

#ctacte
	padding 0 1.5em
	h3
		font-size 1.5em
		margin 1.2em 0 .5em 0
	table
		// border-spacing 0
		font-size .8em
		margin 0 auto
		width 100%
		td
			border-bottom 1px solid $midGrey
			padding .2em 0
			&.date
				text-align center
			&.number
				text-align right
			&.center
				text-align center
		thead
			th
				background-color $baseColor
				color white
				font-size 1.2em
				padding .4em 0
		tr.total, tr.initial-balance
			font-weight bold
	.export
		font-size .9em
		padding 1em
		text-align right
		button
			background-color $midGrey
			border none
			border-radius 3px
			margin-left .5em
			padding 0
			&:hover
				background-color $accentColor
			a
				color $darkGreyGreen
				display block
				padding .3em .5em
				&:hover
					color white
	.pagination
		font-size .9em
		margin 2.5em 0 5em 0
		text-align center
		.wrapper
			border 1px solid $midGrey
			border-radius 3px
			display inline-block
			/* Fix distance between inline-block childrens */
			font-size 0
			.endless_page_current, .endless_page_link, .endless_separator
				border-left 1px solid $midGrey
				color $darkGreyGreen
				display inline-block
				/* Restore font-size before assign 0 value on parent */
				font-size unit($fontSize, 'px')
				padding .5em 0
				width 50px
				&:first-child
					border-left none
			.endless_page_current
				background-color $midGrey
			.endless_page_link:hover
				background-color $accentColor
				color white
			.endless_separator
				background-color $lightGrey
				color $midGrey