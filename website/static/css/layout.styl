						bottom 0
						content ''
						left 0
						margin .3em
						opacity 0
						position absolute
						right 0
						top 0
						transition all .3s ease-in-out
						z-index 1
			&:hover
				a:after
					opacity .7
	.imgs
		text-align center
		img
			border-radius 3px
			margin 1.5em .5em 0 .5em
	.history
		padding 2em
		h2
			text-shadow 1px 1px 2px $midGrey
			font-size 1.7em
			text-align center
			margin .5em 0 .8em 0
		p
			font-weight 300
			line-height 1.3em
			margin-bottom .8em
	.video-company
		margin-top 3em
		text-align center
		p
			padding 0 2em
			color $baseColor
			font-size 1.2em
			text-align left
			margin-bottom 2em
		div
			border-top 1px solid $midGrey
			background-color $lightGrey
			padding 3em 0
			video
				background-color white
	
	.second-col
		padding-right 2em
	.infography
		//border-left 1px solid $midGrey
		background-color #efefef
		border-radius 3px
		font-size .8em
		line-height 1.6em
		margin-top 3.5em
		overflow hidden
		padding 3em 0
		position relative
		.row
			overflow hidden
			.first-col, .second-col
				position relative
			.first-col:not(.empty), .second-col:not(.empty)
				padding 2em
				span
					background-color white
					border-radius 3px
					display block
					border 1px solid $midGrey
					padding 1em
					transition 0.3s ease-out
					&:hover
						border 1px solid $accentColor
						& + i
							color $accentColor
					& + i
						background-color #efefef
						color $baseColor
						font-size 1.8em
						padding .2em 0
						position absolute
						transition 0.3s ease-out
			.first-col:not(.empty)
				border-right 2px solid $baseColor
				margin-left 2px
				i
					right -11px
					bottom 5px
			.second-col:not(.empty)
				border-left 2px solid $baseColor
				i
					left -11px
					bottom 5px
			.empty
				height 100%



