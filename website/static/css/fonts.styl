/* ===== FONT STYLES ==========================================================================================*/

body
	font-family $textFont
	font-weight 400

#extranet
	legend
		font-weight 700
	.random-password
		font-weight 300

.input
	input
		font-family $textFont
		font-weight 300

#home
	.carousel-cell
		div
			font-family $merriweatherFont
	.services
		p
			font-family $textFont
			font-weight 300
		h3
			font-weight 400
	.quote
		p
			font-family $merriweatherFont
			font-weight 300
	.utils
		.utils-title
			font-weight 400