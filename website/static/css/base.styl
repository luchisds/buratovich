//Iinit styles

body, html
	margin 0
	padding 0

body
	//max-width 1280px
	min-width 320px

html
	box-sizing border-box
	color $darkGreyGreen
	font-family $textFont
	font-size unit($fontSize, 'px')
	text-rendering optimizeLegibility

*
:before
:after
	// box-sizing se define en el html, y se hereda en el resto de elementos.
	// http://css-tricks.com/inheriting-box-sizing-probably-slightly-better-best-practice/
	box-sizing inherit

a
	text-decoration none

h1, h2, h3, h4, h5, h6
	margin 0

p
	margin 0

ul
	margin 0
	padding 0
	li
		list-style none

fieldset
	border none


//Jeet layout styles

header
	.logo
		column(8.4/25, gutter: 0)
	nav
		column(16.6/25, gutter:0)

footer
	.logo, .contact
		column(2.5/10, gutter:0)
	.nav
		column(5/10, gutter:0)
	.foot
		stack()

.customer
	stack()

#home
	.services
		stack()
		article
			column(1/3, gutter: 0)
	.utils
		stack()
		div > article
			// column(3/10, gutter:3)
			column(3/10, gutter:0)
			&.pizarras
				// column(4/10, gutter:3)
				column(4/10, gutter:0)
	.misc
		& > div
			column(1/2, gutter:0)

#company
	.first-col
		column(6/10, gutter:0)
	.second-col
		column(4/10, gutter:0)
	.infography
		.first-col, .second-col
			column(1/2, gutter:0)

#contact
	.offices
		.offices-bas, .offices-cha
			column(1/2, gutter:1)
			& > div
				column(1/2, gutter:2)
	.areas
		.column
			column(1/3, gutter:2)
	.maps
		div
			column(1/2, gutter:1.5)

#taxes
	.col-1
		column(2/3, gutter:0)
	.col-2
		column(1/3, gutter:0)

#bussines-units
	.col-2
		column(1/2, gutter:0)
	.col-3
		column(1/3, gutter:0)
	.col-23
		column(2/3, gutter:0)
	.col-4
		column(1/4, gutter:0)
	.col-34
		column(3/4, gutter:0)
	.row
		stack()
		center()

#error-page, #cv
	.img, .data
		column(1/2, gutter:0)